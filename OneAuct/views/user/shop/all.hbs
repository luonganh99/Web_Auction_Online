<!-- Home -->

<div class="home">
    <div class="home_background parallax-window" data-parallax="scroll" data-image-src="images/shop_background.jpg">
    </div>
    <div class="home_overlay"></div>
    <div class="home_content d-flex flex-column align-items-center justify-content-center">
        <div class="title" class="home_title">{{nameCategory}}</div>
    </div>
</div>

<!-- Shop -->

<div class="shop">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">

                <!-- Shop Sidebar -->
                <div class="shop_sidebar">
                    <div class="sidebar_section">
                        <div class="sidebar_title">Danh Mục</div>
                        <ul class="sidebar_categories">
                            <li> <a href="/shop">Tất Cá Danh Mục</a> </li>
                            {{#each lcCategories }}
                            <li><a href="/shop/{{CatID}}/products">{{CatName}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="sidebar_section filter_by_section">
                        <div class="sidebar_title">Lọc theo</div>
                        <div class="sidebar_subtitle">Giá</div>
                        <div class="filter_price">
                            <div id="slider-range" class="slider_range"></div>
                            <p>Khoảng Giá: </p>
                            <p><input type="text" id="amount" class="amount" readonly
                                    style="border:0; font-weight:bold;"></p>
                        </div>
                    </div>
                    <div class="sidebar_section">
                        <div class="sidebar_subtitle color_subtitle">Màu Sắc</div>
                        <ul class="colors_list">
                            <li class="color"><a href="#" style="background: #b19c83;"></a></li>
                            <li class="color"><a href="#" style="background: #000000;"></a></li>
                            <li class="color"><a href="#" style="background: #999999;"></a></li>
                            <li class="color"><a href="#" style="background: #0e8ce4;"></a></li>
                            <li class="color"><a href="#" style="background: #df3b3b;"></a></li>
                            <li class="color"><a href="#" style="background: #ffffff; border: solid 1px #e1e1e1;"></a>
                            </li>
                        </ul>
                    </div>
                    <div class="sidebar_section">
                        <div class="sidebar_subtitle brands_subtitle">Thương Hiệu</div>
                        <ul class="brands_list">
                            <li class="brand"><a href="#">Apple</a></li>
                            <li class="brand"><a href="#">Beoplay</a></li>
                            <li class="brand"><a href="#">Google</a></li>
                            <li class="brand"><a href="#">Meizu</a></li>
                            <li class="brand"><a href="#">OnePlus</a></li>
                            <li class="brand"><a href="#">Samsung</a></li>
                            <li class="brand"><a href="#">Sony</a></li>
                            <li class="brand"><a href="#">Xiaomi</a></li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="col-lg-9">

                <!-- Shop Content -->

                {{#if this.empty}}
                <div class="shop_content">
                     <div class="shop_bar clearfix">
                        <div class="shop_product_count"><span>0</span> sản phẩm được tìm thấy</div>
                        <div class="shop_sorting">
                            <span>Sort by:</span>
                            <ul>
                                <li>
                                    <span class="sorting_text">highest rated<i class="fas fa-chevron-down"></span></i>
                                    <ul>
                                        <li class="shop_sorting_button"
                                            data-isotope-option='{ "sortBy": "original-order" }'>highest rated</li>
                                        <li class="shop_sorting_button" data-isotope-option='{ "sortBy": "name" }'>name
                                        </li>
                                        <li class="shop_sorting_button" data-isotope-option='{ "sortBy": "price" }'>
                                            price</li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div>Danh mục chưa có sản phẩm</div>
                </div>
                {{else}}
                <div class="shop_content">

                    <div class="shop_bar clearfix">
                        <div class="shop_product_count"><span>{{ numProducts }}</span> sản phẩm được tìm thấy</div>
                        <div class="shop_sorting">
                            <span>Xếp theo:</span>
                            <ul>
                                <li>
                                    <span class="sorting_text">đánh giá cao nhất<i class="fas fa-chevron-down"></span></i>
                                    <ul>
                                        <li class="shop_sorting_button"
                                            data-isotope-option='{ "sortBy": "original-order" }'>đánh giá cao nhất</li>
                                        <li class="shop_sorting_button" data-isotope-option='{ "sortBy": "name" }'>name
                                        </li>
                                        <li class="shop_sorting_button" data-isotope-option='{ "sortBy": "price" }'>
                                            giá cả</li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>

                    
                    <div class="product_grid row">
                        <div class="product_grid_border"></div>

                        {{#each products}}
                        <!-- Product Item -->
                        <div class="product_item is_new col-sm-4">
                            <div class="product_border"></div>
                            <div class="product_image d-flex flex-column align-items-center justify-content-center"><img
                                    src="/images/product/{{ProID}}/main_thumbs.jpg" alt="{{ProName}}"></div>
                            <div class="product_content">
                                <div class="product_price">{{format StartingPrice}}</div>
                                <div class="product_name">
                                    <div><a href="#" tabindex="0">{{ProName}}</a></div>
                                </div>
                                <div class="product_name">Đặt giá cao nhất: Anh</div>
                                <div class="product_name">Ngày đăng: {{StartingDate}} </div>
                                <div class="product_name">Thời gian còn lại: 2 ngày 18 giờ</div>
                                <div class="product_name">Số lượt ra giá: 50</div>
                                <a href="/shop/{{CatID}}/products/{{ProID}}"><button class="product_cart_button">Xem chi tiết</button></a>
                            </div>
                            <div class="product_fav"><i class="fas fa-heart"></i></div>
                            <ul class="product_marks">
                                <li class="product_mark product_discount">-25%</li>
                                <li class="product_mark product_new">new</li>
                            </ul>
                        </div>
                        {{/each}}

                    </div>

                    <!-- Shop Page Navigation -->

                    <div class="shop_page_nav d-flex flex-row">
                        <div class="page_prev d-flex flex-column align-items-center justify-content-center"><i
                                class="fas fa-chevron-left"></i></div>
                        <ul class="page_nav d-flex flex-row">
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">...</a></li>
                            <li><a href="#">21</a></li>
                        </ul>
                        <div class="page_next d-flex flex-column align-items-center justify-content-center"><i
                                class="fas fa-chevron-right"></i></div>
                    </div>

                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

